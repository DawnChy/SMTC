<div class="container page-header" ng-controller="articleOfONECTR as ctrl">
    <div class="article">
        <h2 class="article_head" ng-bind="ctrl.dataOFONE.article_head"></h2>
        <hr>
        <p class="article_info">
            <span class="glyphicon glyphicon-user"></span>作者：
            <b>\{{ctrl.dataOFONE.author}}</b>
            发表于 <b>\{{ctrl.dataOFONE.article_info|date:'yyyy'+'-'+'MM'+'-'+'dd'+'-'+'HH:mm:ss'}}</b>
            &nbsp;&nbsp;<span class="badge" name="count" ng-bind="ctrl.dataOFONE.count">0</span>
            &nbsp;&nbsp;<span class="badge" name="like" ng-bind="ctrl.dataOFONE.like">0</span>
        </p>
        <hr>
        <div class="article_body_one">
            <textarea ng-bind="ctrl.dataOFONE.article_body" style="width:100%;height:300px;resize:none" readOnly></textarea>
        </div>
        <button type="button" class="btn btn-info"><a href="/communicate">返回</a></button>
    </div>
    <div class="comment">
        <p>评论</p>
        <form class="" action="" method="post">
            <textarea name="comment_content" rows="8" cols="80"></textarea>
            <input type="submit" class="btn btn-success" name="" value="评论">
        </form>
    </div>
    <div id="" class="article" ng-repeat="x in ctrl.oneComments">
        <p>
            <span id="Article" ng-bind="x.Article" style="display:none"></span>
            <span ng-bind="'评论：'+x.preson"></span>&nbsp;&nbsp;&nbsp;
            <span>\{{x.time|date:'yyyy'+'-'+'MM'+'-'+'dd'}}</span>
        </p>
        <p ng-bind="x.content"></p>
    </div>

</div>
